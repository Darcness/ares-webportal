<style>
    .mainSheet {
        display: grid;
        grid-template-columns: '1fr 1fr 1fr 1fr 1fr 1fr';
        grid-column-gap: 10px;
    }

    .sectionHeader {
        grid-column: 1/ span 6;
        text-align: center;
        border-bottom: 1px solid black;
    }

    .trackerBox {
        border: 2px solid black;
        padding: 0px;
        height: 18px;
        width: 18px;
    }

    .trackerBox.agg {
        background: linear-gradient(135deg, transparent 0 45%, black 45% 55%, transparent 55% 100%), 
        linear-gradient(45deg, transparent 0 45%, black 45% 55%, transparent 55% 100%);
    }

    .trackerBox.superficial {
        background: linear-gradient(135deg, transparent 0 45%, black 45% 55%, transparent 55% 100%);
    }

    .trackerBoxContainer {
        display: flex;
        flex-direction: row;
        gap: 5px;
    }
</style>

<div class="mainSheet" ...attributes>
    <!-- Info -->
    {{#each this.info as |info|}}
    <div class="info_container" style="grid-column-end: span 2">
        <Wod5eStat @data={{info}} />
    </div>
    {{/each}}

    <!-- Trackers -->
    <div class="sectionHeader">Trackers</div>
    {{#each this.trackers as |tracker|}}
    <div style="tracker_container" style="grid-column-end: span 3">
        <Wod5eTracker @data={{tracker}} />
    </div>
    {{/each}}
    <!-- Attributes -->
    <div class="sectionHeader">Attributes</div>
    <div style="grid-column-end: span 2" class="stat_type_head">Physical</div>
    <div style="grid-column-end: span 2" class="stat_type_head">Social</div>
    <div style="grid-column-end: span 2" class="stat_type_head">Mental</div>
    {{#each this.attributes as |attrib|}}
    <div class="attributes_container" style="grid-column-end: span 2">
        <Wod5eDot @data={{attrib}} />
    </div>
    {{/each}}

    <!-- Skills -->
    <div class="sectionHeader">Skills</div>
    {{#each this.skills as |skill|}}
    <div class="skill_container" style="grid-column-end: span 2">
        <Wod5eDot @data={{skill}} />
        {{#each skill.specialties as |spec|}}
        <div style="spec_item">&nbsp;&nbsp;-{{{spec}}}</div>
        {{/each}}
    </div>
    {{/each}}

    <!-- Advantages -->
    <div class="sectionHeader">Advantages</div>
    {{#each this.advantages as |advantage|}}
    <div class="advantage_container" style="grid-column-end: span 3">
        <Wod5eStat @data={{advantage}} />
    </div>
    {{/each}}

    <!-- Powers -->
    <div class="sectionHeader">{{{@sheet.powers_title}}}</div>
    {{#if (eq @sheet.type 'hunter')}}
    {{#each this.edges as |edge|}}
    <div class="edge_container" style="grid-column-end: span 3">
        <Wod5eStat @data={{edge}} />
    </div>
    {{/each}}
    {{/if}}
    
</div>